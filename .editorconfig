[*]
charset=utf-8
end_of_line=crlf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{*.sht,*.htm,*.html,*.shtm,*.shtml,*.ng,*.tpl,*.wxml}]
indent_style=space
indent_size=2

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[{*.css,*.wxss}]
indent_style=space
indent_size=2

[{*.js,*.wk}]
indent_style=space
indent_size=2

[{*.ts,*.ats}]
indent_style=space
indent_size=2

[*.js.map]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.vue,*.wpy}]
indent_style=space
indent_size=2

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2

